<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laststop.thelaststop.linee"
    android:id="@+id/rel"
    android:background="#616161">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:id="@+id/capolinea"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaLinee"
        android:dividerHeight="2dp"
        android:divider="#616161"
        android:backgroundTintMode="src_atop"
        android:clickable="true"
        android:background="#91b4ff"
        android:layout_below="@+id/capolinea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/linee"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/capolinea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Capolinea"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/capolinea"
        android:layout_alignRight="@+id/capolinea"
        android:layout_alignEnd="@+id/capolinea"
        android:layout_marginRight="98dp"
        android:layout_marginEnd="98dp" />


</RelativeLayout>
